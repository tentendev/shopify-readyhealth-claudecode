{% comment %}
  Custom Fonts CSS
  Renders @font-face declarations for custom fonts
{% endcomment %}
<style>
  @font-face {
    font-family: 'Harmonyos Sans Tc';
    src: url('{{ 'HarmonyOS_Sans_TC_Bold.ttf' | asset_url }}') format("truetype");
    font-weight: 700;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'Harmonyos Sans Tc';
    src: url('{{ 'HarmonyOS_Sans_TC_Medium.ttf' | asset_url }}') format("truetype");
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'Harmonyos Sans Tc';
    src: url('{{ 'HarmonyOS_Sans_TC_Regular.ttf' | asset_url }}') format("truetype");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }
</style>
