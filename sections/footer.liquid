{% comment %}
  Footer Section
  Converted from Webflow footer structure
{% endcomment %}

<footer class="footer_wrap u-background-4">
  <h2 class="footer_title u-sr-only">{{ 'footer.title' | t }}</h2>
  <div class="footer_contain u-container">
    <div data-medium-columns="1" class="footer_layout u-grid-custom">
      <div class="footer_content">
        <a aria-label="{{ 'accessibility.skip_to_content' | t }}" href="{{ routes.root_url }}" class="footer_logo_wrap w-inline-block">
          {%- if section.settings.logo != blank -%}
            <img
              src="{{ section.settings.logo | image_url: width: 220 }}"
              alt="{{ shop.name }}"
              loading="lazy"
              width="220"
              height="24"
            >
          {%- else -%}
            <img src="{{ 'logo_zh.svg' | asset_url }}" loading="lazy" alt="{{ shop.name }}">
          {%- endif -%}
        </a>

        <div class="footer_social_wrap">
          <div role="list" class="footer_social_list">
            {%- if settings.social_facebook_link != blank -%}
              <div role="listitem" class="footer_social_item">
                <a aria-label="Facebook" href="{{ settings.social_facebook_link }}" target="_blank" class="footer_social_link w-inline-block">
                  <svg width="100%" viewbox="0 0 64 64" aria-hidden="true" class="u-svg">
                    <path d="M34.1,47V33.3h4.6l0.7-5.3h-5.3v-3.4c0-1.5,0.4-2.6,2.6-2.6l2.8,0v-4.8c-0.5-0.1-2.2-0.2-4.1-0.2 c-4.1,0-6.9,2.5-6.9,7V28H24v5.3h4.6V47H34.1z" fill="currentColor"/>
                  </svg>
                </a>
              </div>
            {%- endif -%}

            {%- if settings.social_twitter_link != blank -%}
              <div role="listitem" class="footer_social_item">
                <a aria-label="X" href="{{ settings.social_twitter_link }}" target="_blank" class="footer_social_link w-inline-block">
                  <svg xmlns="http://www.w3.org/2000/svg" width="100%" viewbox="0 0 24 24" fill="none" class="u-svg">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" fill="currentColor"/>
                  </svg>
                </a>
              </div>
            {%- endif -%}

            {%- if settings.social_youtube_link != blank -%}
              <div role="listitem" class="footer_social_item">
                <a aria-label="YouTube" href="{{ settings.social_youtube_link }}" target="_blank" class="footer_social_link w-inline-block">
                  <svg width="100%" viewbox="0 0 48 48" aria-hidden="true" class="u-svg">
                    <path d="M38.8,14.5c-0.4-1.4-1.5-2.5-2.9-2.9C33.4,11,24,11,24,11s-9.4,0-11.9,0.6c-1.4,0.4-2.5,1.5-2.9,2.9 C8.6,17,8.6,22.2,8.6,22.2s0,5.2,0.6,7.7c0.4,1.4,1.5,2.5,2.9,2.9c2.5,0.6,11.9,0.6,11.9,0.6s9.4,0,11.9-0.6 c1.4-0.4,2.5-1.5,2.9-2.9c0.6-2.5,0.6-7.7,0.6-7.7S39.4,17,38.8,14.5z M21.2,27V17.4l8,4.8L21.2,27z" fill="currentColor"/>
                  </svg>
                </a>
              </div>
            {%- endif -%}

            {%- if settings.social_instagram_link != blank -%}
              <div role="listitem" class="footer_social_item">
                <a aria-label="Instagram" href="{{ settings.social_instagram_link }}" target="_blank" class="footer_social_link w-inline-block">
                  <svg viewbox="0 0 56 56" width="100%" aria-hidden="true" class="u-svg">
                    <path d="M28,12c-5.2,0-5.9,0-7.9,0.1c-2,0.1-3.4,0.4-4.6,0.9c-1.2,0.5-2.3,1.1-3.3,2.2c-1,1-1.7,2.1-2.2,3.3 c-0.5,1.2-0.8,2.6-0.9,4.6C9,25.1,9,25.8,9,31s0,5.9,0.1,7.9c0.1,2,0.4,3.4,0.9,4.6c0.5,1.2,1.1,2.3,2.2,3.3c1,1,2.1,1.7,3.3,2.2 c1.2,0.5,2.6,0.8,4.6,0.9c2,0.1,2.7,0.1,7.9,0.1s5.9,0,7.9-0.1c2-0.1,3.4-0.4,4.6-0.9c1.2-0.5,2.3-1.1,3.3-2.2c1-1,1.7-2.1,2.2-3.3 c0.5-1.2,0.8-2.6,0.9-4.6c0.1-2,0.1-2.7,0.1-7.9s0-5.9-0.1-7.9c-0.1-2-0.4-3.4-0.9-4.6c-0.5-1.2-1.1-2.3-2.2-3.3 c-1-1-2.1-1.7-3.3-2.2c-1.2-0.5-2.6-0.8-4.6-0.9C33.9,12,33.2,12,28,12z M28,15.5c5.1,0,5.7,0,7.7,0.1c1.9,0.1,2.9,0.4,3.5,0.7 c0.9,0.3,1.5,0.8,2.2,1.4c0.7,0.7,1.1,1.3,1.4,2.2c0.3,0.7,0.6,1.7,0.7,3.5c0.1,2,0.1,2.6,0.1,7.7s0,5.7-0.1,7.7 c-0.1,1.9-0.4,2.9-0.7,3.5c-0.3,0.9-0.8,1.5-1.4,2.2c-0.7,0.7-1.3,1.1-2.2,1.4c-0.7,0.3-1.7,0.6-3.5,0.7c-2,0.1-2.6,0.1-7.7,0.1 s-5.7,0-7.7-0.1c-1.9-0.1-2.9-0.4-3.5-0.7c-0.9-0.3-1.5-0.8-2.2-1.4c-0.7-0.7-1.1-1.3-1.4-2.2c-0.3-0.7-0.6-1.7-0.7-3.5 c-0.1-2-0.1-2.6-0.1-7.7s0-5.7,0.1-7.7c0.1-1.9,0.4-2.9,0.7-3.5c0.3-0.9,0.8-1.5,1.4-2.2c0.7-0.7,1.3-1.1,2.2-1.4 c0.7-0.3,1.7-0.6,3.5-0.7C22.3,15.5,22.9,15.5,28,15.5z M28,21.2c-5.4,0-9.8,4.4-9.8,9.8s4.4,9.8,9.8,9.8s9.8-4.4,9.8-9.8 S33.4,21.2,28,21.2z M28,37.3c-3.5,0-6.3-2.8-6.3-6.3s2.8-6.3,6.3-6.3s6.3,2.8,6.3,6.3S31.5,37.3,28,37.3z M40.5,20.8 c0,1.3-1,2.3-2.3,2.3s-2.3-1-2.3-2.3c0-1.3,1-2.3,2.3-2.3S40.5,19.5,40.5,20.8z" fill="currentColor"/>
                  </svg>
                </a>
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>

      <div class="footer_links_layout">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'menu' -%}
              <section data-trigger="group" class="footer_group_wrap" {{ block.shopify_attributes }}>
                <h3 class="footer_group_title u-text-style-h6 u-margin-bottom-text">{{ block.settings.title }}</h3>
                <div role="list" class="footer_group_list">
                  {%- for link in block.settings.menu.links -%}
                    <div data-trigger="hover-other focus-other" role="listitem" class="footer_group_item">
                      <a href="{{ link.url }}" class="footer_link_wrap w-inline-block">
                        <div class="footer_link_text u-text-style-small">{{ link.title }}</div>
                      </a>
                    </div>
                  {%- endfor -%}
                </div>
              </section>
            {%- when 'contact' -%}
              <section data-trigger="group" class="footer_group_wrap" {{ block.shopify_attributes }}>
                <h3 class="footer_group_title u-text-style-h6 u-margin-bottom-text">{{ 'footer.contact_us' | t }}</h3>
                <div role="list" class="footer_group_list">
                  {%- if settings.contact_email != blank -%}
                    <div role="listitem" class="footer_group_item">
                      <div class="footer_contact_wrap">
                        <div class="footer_link_text u-text-style-small">{{ settings.contact_email }}</div>
                      </div>
                    </div>
                  {%- endif -%}
                  {%- if settings.contact_phone != blank -%}
                    <div role="listitem" class="footer_group_item">
                      <div class="footer_contact_wrap">
                        <div class="footer_link_text u-text-style-small">{{ settings.contact_phone }}</div>
                      </div>
                    </div>
                  {%- endif -%}
                  {%- if settings.address_taipei != blank -%}
                    <div role="listitem" class="footer_group_item">
                      <div class="footer_contact_wrap">
                        <div class="footer_link_text u-text-style-small">{{ settings.address_taipei }}</div>
                      </div>
                    </div>
                  {%- endif -%}
                  {%- if settings.address_hsinchu != blank -%}
                    <div role="listitem" class="footer_group_item">
                      <div class="footer_contact_wrap">
                        <div class="footer_link_text u-text-style-small">{{ settings.address_hsinchu }}</div>
                      </div>
                    </div>
                  {%- endif -%}
                  {%- if settings.company_tax_id != blank -%}
                    <div role="listitem" class="footer_group_item">
                      <div class="footer_contact_wrap">
                        <div class="footer_link_text u-text-style-small">統一編號： {{ settings.company_tax_id }}</div>
                      </div>
                    </div>
                  {%- endif -%}
                </div>
              </section>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>

  <div class="footer_bottom_wrap">
    <div class="footer_bottom_contain u-container">
      <div class="footer_payment_list">
        {%- if section.settings.show_payment_icons -%}
          {%- for type in shop.enabled_payment_types -%}
            <div class="footer_payment_icon">
              {{ type | payment_type_svg_tag }}
            </div>
          {%- endfor -%}
        {%- endif -%}
      </div>
      <div class="footer_bottom_layout">
        {%- if section.settings.bottom_menu != blank -%}
          <div data-trigger="group" role="list" class="footer_bottom_list">
            {%- for link in section.settings.bottom_menu.links -%}
              <div data-trigger="hover-other focus-other" role="listitem" class="footer_bottom_item">
                <a href="{{ link.url }}" class="footer_bottom_link_wrap w-inline-block">
                  <div class="footer_bottom_link_text u-text-style-small">{{ link.title }}</div>
                </a>
              </div>
            {%- endfor -%}
          </div>
        {%- endif -%}
        <div class="footer_bottom_text u-text-style-small">
          <span>© </span>
          <span data-dynamic-year="">{{ 'now' | date: '%Y' }}</span>
          <span> {{ section.settings.copyright_text | default: shop.name }} All Rights Reserved.</span>
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "bottom_menu",
      "label": "Bottom menu",
      "info": "Privacy Policy, Terms links"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright text",
      "default": "SD HEALTH"
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Menu"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "contact",
      "name": "Contact information",
      "limit": 1,
      "settings": []
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "menu",
        "settings": {
          "title": "關於我們"
        }
      },
      {
        "type": "menu",
        "settings": {
          "title": "顧客服務"
        }
      },
      {
        "type": "contact"
      }
    ]
  }
}
{% endschema %}
