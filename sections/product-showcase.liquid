    {
      "type": "image_picker",
      "id": "product_gif",
      "label": "Product Animation (GIF)"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "立即選購"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/#buy"
    },
    {
      "type": "header",
      "content": "Product Image 1"
    },
    {
      "type": "image_picker",
      "id": "product_image1",
      "label": "Product Image 1"
    },
    {
      "type": "text",
      "id": "item1_title",
      "label": "Item 1 Title",
      "default": "說明卡&物流袋"
    },
    {
      "type": "header",
      "content": "Product Image 2"
    },
    {
      "type": "image_picker",
      "id": "product_image2",
      "label": "Product Image 2"
    },
    {
      "type": "text",
      "id": "item2_title",
      "label": "Item 2 Title",
      "default": "採集刷"
    },
    {
      "type": "text",
      "id": "item3_title",
      "label": "Item 3 Title",
      "default": "試管(含保存液)"
    },
    {
      "type": "text",
      "id": "item4_title",
      "label": "Item 4 Title",
      "default": "健康覺醒小物"
    },
    {
      "type": "text",
      "id": "item4_subtitle",
      "label": "Item 4 Subtitle",
      "default": "(每天，美一點，你猜到了嗎?)"
    }
  ],
  "presets": [
    {
      "name": "Product Showcase"
    }
  ]
}
{% endschema %}
