{% comment %}
  Comparison Table Section
  AI vs Traditional Gene Testing
{% endcomment %}

<div id="advantage" class="u-section">
  <div data-wf--spacer--variant="main" class="u-section-spacer w-variant-60a7ad7d-02b0-6682-95a5-2218e6fd1490 u-ignore-trim"></div>
  <div class="layout_contain u-container">
    <div class="title_wrap">
      <div data-wf--typography-eyebrow--variant="base" class="u-eyebrow-wrapper">
        <div class="u-eyebrow-layout">
          <div class="u-eyebrow-marker"></div>
          <div class="u-eyebrow-text u-text-style-main w-richtext">
            <p>{{ section.settings.eyebrow | default: 'Our advantages' }}</p>
          </div>
        </div>
      </div>
      <h2 class="u-text-style-h1">{{ section.settings.heading | default: '超越傳統基因檢測: AI智能引領你的健康生活' }}</h2>
    </div>
    <div class="compare_table_wrap">
      <table class="compare_table">
        <thead>
          <tr>
            <th></th>
            <th>
              <div class="u-text-style-h3">{{ section.settings.col1_header | default: 'AI 生活化基因檢測' }}</div>
            </th>
            <th>
              <div class="u-text-style-h3">{{ section.settings.col2_header | default: '一般基因檢測' }}</div>
            </th>
          </tr>
        </thead>
        <tbody>
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'row' -%}
                <tr {{ block.shopify_attributes }}>
                  <th>
                    <div class="u-text-style-h6">{{ block.settings.row_label }}</div>
                  </th>
                  <td>
                    <div class="table_item">
                      <div class="compare_icon is-checked">
                        <svg xmlns="http://www.w3.org/2000/svg" width="100%" viewbox="0 0 16 16" fill="none">
                          <path d="M2 9.626L3.606 11.348C4.492 12.298 4.935 12.772 5.431 12.922C5.867 13.053 6.331 13.018 6.746 12.822C7.219 12.598 7.598 12.061 8.358 10.986L14 3" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                      </div>
                      <div class="u-text-style-main">{{ block.settings.ai_value | replace: '[highlight]', '<span class="span_highlight">' | replace: '[/highlight]', '</span>' }}</div>
                    </div>
                  </td>
                  <td>
                    <div class="table_item">
                      <div class="compare_icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="100%" viewbox="0 0 24 24" fill="none">
                          <path d="M5.73204 20.5C3.44204 20.5 2.00904 18.002 3.15104 16L9.41904 5.006C10.563 2.998 13.437 2.998 14.582 5.006L20.849 16C21.991 18.002 20.558 20.5 18.268 20.5H5.73204Z" stroke="currentColor" stroke-width="1.5"></path>
                        </svg>
                      </div>
                      <div class="u-text-style-main">{{ block.settings.traditional_value }}</div>
                    </div>
                  </td>
                </tr>
            {%- endcase -%}
          {%- endfor -%}
        </tbody>
      </table>
    </div>
  </div>
  <div data-wf--spacer--variant="main" class="u-section-spacer w-variant-60a7ad7d-02b0-6682-95a5-2218e6fd1490 u-ignore-trim"></div>
</div>

