{% comment %}
  Genes & You Section
  Health topics with hover cards
{% endcomment %}

<div id="gene" class="u-section">
  <div data-wf--spacer--variant="main" class="u-section-spacer w-variant-60a7ad7d-02b0-6682-95a5-2218e6fd1490 u-ignore-trim"></div>
  <div class="layout_contain u-container">
    <div class="title_wrap">
      <div data-wf--typography-eyebrow--variant="base" class="u-eyebrow-wrapper">
        <div class="u-eyebrow-layout">
          <div class="u-eyebrow-marker"></div>
          <div class="u-eyebrow-text u-text-style-main w-richtext">
            <p>{{ section.settings.eyebrow | default: 'Genes & You' }}</p>
          </div>
        </div>
      </div>
      <h2 class="u-text-style-h1">{{ section.settings.heading | default: '想真正了解自己的體質？從基因檢測開始' }}</h2>
    </div>
    <div class="features_grid u-grid-autofit">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'feature_card' -%}
            <div class="feature_card u-theme-dark" {{ block.shopify_attributes }}>
              {%- if block.settings.image != blank -%}
                <img
                  src="{{ block.settings.image | image_url: width: 1280 }}"
                  loading="lazy"
                  alt="{{ block.settings.title }}"
                  sizes="(max-width: 749px) 100vw, 50vw"
                  srcset="{{ block.settings.image | image_url: width: 500 }} 500w,
                          {{ block.settings.image | image_url: width: 800 }} 800w,
                          {{ block.settings.image | image_url: width: 1080 }} 1080w,
                          {{ block.settings.image | image_url: width: 1280 }} 1280w"
                  class="feature_img u-cover-absolute"
                >
              {%- else -%}
                <img src="{{ block.settings.image_url | default: 'weight.webp' | asset_url }}" loading="lazy" alt="{{ block.settings.title }}" class="feature_img u-cover-absolute">
              {%- endif -%}
              <div data-wf--media-overlay--variant="gradient" class="u-overlay w-variant-9653c0cc-21fc-fb82-1373-c98b1644e5a8 feature_overlay" data-number="20"></div>
              <div class="feature_main_content">
                <div class="u-text-style-h3">{{ block.settings.tag }}</div>
                <h4 class="u-text-style-large">{{ block.settings.title }}</h4>
              </div>
              <div class="feature_hover_content">
                <p class="u-text-style-main">{{ block.settings.description }}</p>
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
  <div data-wf--spacer--variant="main" class="u-section-spacer w-variant-60a7ad7d-02b0-6682-95a5-2218e6fd1490 u-ignore-trim"></div>
</div>

