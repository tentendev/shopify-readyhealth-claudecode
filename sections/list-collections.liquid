{% comment %}
  List Collections Section
  Display all collections
{% endcomment %}

<div class="u-section u-theme-light">
  <div data-wf--spacer--variant="main" class="u-section-spacer w-variant-60a7ad7d-02b0-6682-95a5-2218e6fd1490 u-ignore-trim"></div>
  <div class="u-container">
    <div class="title_wrap u-margin-bottom-6">
      <h1 class="u-text-style-h1">{{ section.settings.heading }}</h1>
    </div>

    <div class="collections_grid u-grid-autofit">
      {%- for collection in collections -%}
        {%- unless collection.handle == 'all' -%}
          <div class="collection_card" data-trigger="hover focus">
            <div class="collection_image">
              {%- if collection.image -%}
                <img
                  src="{{ collection.image | image_url: width: 600 }}"
                  loading="lazy"
                  alt="{{ collection.title }}"
                  sizes="(max-width: 600px) 100vw, 600px"
                  srcset="{{ collection.image | image_url: width: 300 }} 300w, {{ collection.image | image_url: width: 500 }} 500w, {{ collection.image | image_url: width: 600 }} 600w"
                  class="u-cover"
                >
              {%- else -%}
                {{ 'collection-1' | placeholder_svg_tag: 'u-cover' }}
              {%- endif -%}
            </div>
            <div class="collection_content">
              <h2 class="u-text-style-h3">{{ collection.title }}</h2>
              {%- if section.settings.show_count -%}
                <p class="u-text-style-small">{{ collection.products_count }} {{ 'collections.general.items' | t }}</p>
              {%- endif -%}
            </div>
            <div class="clickable_wrap u-cover-absolute">
              <a href="{{ collection.url }}" class="clickable_link w-inline-block">
                <span class="clickable_text u-sr-only">{{ collection.title }}</span>
              </a>
            </div>
          </div>
        {%- endunless -%}
      {%- endfor -%}
    </div>
  </div>
  <div data-wf--spacer--variant="main" class="u-section-spacer w-variant-60a7ad7d-02b0-6682-95a5-2218e6fd1490 u-ignore-trim"></div>
</div>

{% schema %}
{
  "name": "Collections List",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "所有系列"
    },
    {
      "type": "checkbox",
      "id": "show_count",
      "label": "Show product count",
      "default": true
    }
  ]
}
{% endschema %}
