          "label": "Display as heading",
          "default": false
        },
        {
          "type": "textarea",
          "id": "traditional_value",
          "label": "Traditional Value",
          "default": "數十萬級"
        },
        {
          "type": "checkbox",
          "id": "traditional_is_heading",
          "label": "Display as heading",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "NGS Comparison",
      "blocks": [
        {
          "type": "row",
          "settings": {
            "row_label": "數據點",
            "ngs_value": "數百~千萬級",
            "ngs_is_heading": true,
            "traditional_value": "數十萬級",
            "traditional_is_heading": true
          }
        },
        {
          "type": "row",
          "settings": {
            "row_label": "可讀取資料",
            "ngs_value": "可讀取超過數百~千萬筆原始序列資料（深度更高、可發現新突變）",
            "ngs_is_heading": false,
            "traditional_value": "偵測固定約 60 萬個已知 SNP",
            "traditional_is_heading": false
          }
        },
        {
          "type": "row",
          "settings": {
            "row_label": "採樣數據量",
            "ngs_value": ">1000 MB（資料越多、看得越細）",
            "ngs_is_heading": false,
            "traditional_value": "數十 MB",
            "traditional_is_heading": false
          }
        },
        {
          "type": "row",
          "settings": {
            "row_label": "發現突變",
            "ngs_value": "可以發現罕見或新突變",
            "ngs_is_heading": false,
            "traditional_value": "無法發現新突變",
            "traditional_is_heading": false
          }
        }
      ]
    }
  ]
}
{% endschema %}
