{% comment %}
  Customer Account Section
{% endcomment %}

<div class="u-section u-theme-light">
  <div data-wf--spacer--variant="main" class="u-section-spacer w-variant-60a7ad7d-02b0-6682-95a5-2218e6fd1490 u-ignore-trim"></div>
  <div class="u-container">
    <h1 class="u-text-style-h1 u-margin-bottom-6">{{ 'customer.account.title' | t }}</h1>

    <div class="customer_account_grid">
      <div class="customer_info u-margin-bottom-6">
        <h2 class="u-text-style-h3 u-margin-bottom-4">{{ 'customer.account.details' | t }}</h2>
        <p class="u-text-style-main">{{ customer.name }}</p>
        <p class="u-text-style-main">{{ customer.email }}</p>
        <a href="{{ routes.account_addresses_url }}" class="u-text-style-main u-margin-top-2">{{ 'customer.account.view_addresses' | t }}</a>
        <a href="{{ routes.account_logout_url }}" class="u-text-style-small u-margin-top-4">{{ 'customer.log_out' | t }}</a>
      </div>

      <div class="customer_orders">
        <h2 class="u-text-style-h3 u-margin-bottom-4">{{ 'customer.orders.title' | t }}</h2>

        {%- if customer.orders.size > 0 -%}
          <table class="customer_orders_table u-width-full">
            <thead>
              <tr>
                <th class="u-text-style-small">{{ 'customer.orders.order_number' | t }}</th>
                <th class="u-text-style-small">{{ 'customer.orders.date' | t }}</th>
                <th class="u-text-style-small">{{ 'customer.orders.payment_status' | t }}</th>
                <th class="u-text-style-small">{{ 'customer.orders.fulfillment_status' | t }}</th>
                <th class="u-text-style-small">{{ 'customer.orders.total' | t }}</th>
              </tr>
            </thead>
            <tbody>
              {%- for order in customer.orders -%}
                <tr>
                  <td class="u-text-style-main">
                    <a href="{{ order.customer_url }}">{{ order.name }}</a>
                  </td>
                  <td class="u-text-style-main">{{ order.created_at | date: format: 'date' }}</td>
                  <td class="u-text-style-main">{{ order.financial_status_label }}</td>
                  <td class="u-text-style-main">{{ order.fulfillment_status_label }}</td>
                  <td class="u-text-style-main">{{ order.total_price | money }}</td>
                </tr>
              {%- endfor -%}
            </tbody>
          </table>
        {%- else -%}
          <p class="u-text-style-main">{{ 'customer.orders.none' | t }}</p>
        {%- endif -%}
      </div>
    </div>
  </div>
  <div data-wf--spacer--variant="main" class="u-section-spacer w-variant-60a7ad7d-02b0-6682-95a5-2218e6fd1490 u-ignore-trim"></div>
</div>

{% schema %}
{
  "name": "Customer Account",
  "settings": []
}
{% endschema %}
